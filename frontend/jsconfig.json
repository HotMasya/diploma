{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "esnext",
    "paths": {
      "Api/*": ["Api/*"],
      "Assets/*": ["Assets/*"],
      "Components/*": ["Components/*"],
      "Constants/*": ["Constants/*"],
      "Engine/*": ["Engine/*"],
      "Helpers/*": ["Helpers/*"],
      "Hooks/*": ["Hooks/*"],
      "Models/*": ["Models/*"],
      "Screens/*": ["Screens/*"]
    }
  },
  "exclude": ["node_modules/", "**/node_modules/*", "build"],
  "include": ["src/**/*"]
}
